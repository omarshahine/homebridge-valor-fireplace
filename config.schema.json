{
  "pluginAlias": "ValorFireplace",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "Fireplaces are exposed as separate accessories. Each fireplace needs a static IP address configured on your network.",
  "schema": {
    "fireplaces": {
      "type": "array",
      "items": {
        "title": "Fireplace",
        "type": "object",
        "properties": {
          "name": {
            "title": "Name of the fireplace",
            "type": "string",
            "placeholder": "Fireplace"
          },
          "ip": {
            "title": "IP of the device (should be static)",
            "type": "string",
            "placeholder": "192.168.x.x",
            "required": true,
            "description": "See: https://github.com/omarshahine/homebridge-valor-fireplace"
          }
        }
      }
    }
  }
}
