{
  "pluginAlias": "ValorFireplace",
  "pluginType": "platform",
  "singular": true,
  "headerDisplay": "Fireplaces are exposed as separate accessories. Each fireplace needs a static IP address configured on your network.",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "Valor Fireplace",
        "description": "Plugin name as displayed in the Homebridge log."
      },
      "debug": {
        "title": "Debug Mode",
        "type": "boolean",
        "default": false,
        "description": "Enable to log all status updates. When disabled, only logs status changes."
      },
      "temperatureUnit": {
        "title": "Temperature Unit",
        "type": "string",
        "default": "C",
        "oneOf": [
          { "title": "Celsius", "enum": ["C"] },
          { "title": "Fahrenheit", "enum": ["F"] }
        ],
        "description": "Temperature unit for log output."
      },
      "fireplaces": {
        "title": "Fireplaces",
        "type": "array",
        "items": {
          "title": "Fireplace",
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "placeholder": "Fireplace"
            },
            "ip": {
              "title": "IP Address",
              "type": "string",
              "placeholder": "192.168.x.x",
              "description": "Static IP address of the fireplace WiFi controller"
            }
          },
          "required": ["name", "ip"]
        }
      }
    }
  }
}
